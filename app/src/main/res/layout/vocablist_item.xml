<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/editVocabListLayout"
        android:layout_width="325dp"
        android:layout_height="90dp"
        android:background="@drawable/ripple_effect_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vocabListName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="VocabListName"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/vocabTuplesAmount"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vocabularies" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/playQuizBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="15sp"
            android:background="@drawable/ripple_effect_button"
            app:srcCompat="@android:drawable/ic_media_play" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>