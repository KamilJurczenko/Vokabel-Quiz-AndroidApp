<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="268dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/popup_shape">

        <include layout="@layout/toolbar_top_round"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newFirstVocab"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:hint="@string/english_word"
            android:maxLength="15"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newSecondVocab"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:hint="@string/german_word"
            android:maxLength="15"
            android:text=""
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="269dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/newVocabCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0"
                android:text="Cancel" />

            <Button
                android:id="@+id/newVocabSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0"
                android:text="Submit" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>